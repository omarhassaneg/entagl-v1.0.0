---
interface Benefit {
  title: string;
  description: string;
  image: string;
  cta: string;
}

interface Props {
  title: string;
  benefits: Benefit[];
}

const { title, benefits } = Astro.props;
---

<section class="py-20 bg-white/5">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-white text-center mb-16">
      {title}
    </h2>

    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="group" data-aos="fade-up">
          <div class="aspect-video rounded-xl overflow-hidden mb-6">
            <img 
              src={benefit.image} 
              alt={benefit.title}
              class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-300"
            />
          </div>
          <h3 class="text-xl font-semibold text-white mb-4">{benefit.title}</h3>
          <p class="text-white-600 mb-4">{benefit.description}</p>
          <a href="/demo" class="inline-flex items-center text-primary-600 font-medium group-hover:translate-x-2 transition-transform duration-200">
            {benefit.cta}
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      ))}
    </div>
  </div>
</section>