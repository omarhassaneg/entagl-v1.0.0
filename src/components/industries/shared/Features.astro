---
interface Feature {
  title: string;
  description: string;
  image: string;
}

interface Props {
  title: string;
  subtitle: string;
  description: string;
  features: Feature[];
}

const { title, subtitle, description, features } = Astro.props;
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">{subtitle}</span>
      <h2 class="text-3xl font-bold text-white mt-2 mb-4">{title}</h2>
      <p class="text-white-600 max-w-2xl mx-auto">
        {description}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <div class="bg-white/5 backdrop-blur-sm rounded-xl overflow-hidden border border-white/10" data-aos="fade-up">
          <div class="aspect-video relative overflow-hidden">
            <img 
              src={feature.image} 
              alt={feature.title}
              class="w-full h-full object-cover"
            />
          </div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-2">{feature.title}</h3>
            <p class="text-white-600">{feature.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>