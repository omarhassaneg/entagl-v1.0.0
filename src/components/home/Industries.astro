---

<section class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-white mb-12">
      Explore Tailored AI Solutions for Your<br />
      Unique Business Needs
    </h2>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
      {industries.map((industry, index) => (
        <a 
          href={industry.href}
          class="group cursor-pointer"
          data-aos="fade-up"
          data-aos-delay={index * 100}
        >
          <div class={`relative overflow-hidden rounded-2xl p-6 h-full bg-gradient-to-br ${industry.color} hover:scale-[1.02] transform transition-all duration-300`}>
            <div class="relative z-10">
              <h3 class="text-xl font-semibold text-white mb-2">{industry.title}</h3>
              <p class="text-white/90 text-sm">{industry.description}</p>
              <div class="mt-4 flex items-center text-white/90 text-sm font-medium group-hover:translate-x-2 transition-transform duration-300">
                Learn more
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .grid {
    grid-auto-rows: 1fr;
  }

  @media (min-width: 640px) {
    .grid > a:nth-child(3n) {
      grid-row: span 2;
    }
  }
</style>