<section class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16" data-aos="fade-up">
      <span class="text-sm font-semibold text-primary-600 uppercase tracking-wider">Features</span>
      <h2 class="text-3xl font-bold mt-2 mb-4">Transform Your Business with AI Solutions</h2>
      <p class="text-white-600 max-w-2xl mx-auto">
        Discover how our AI Agents can revolutionize your operations. From customer support to sales automation, we have the solutions you need.
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-16">
      {features.map((feature, index) => (
        <div class="text-center group" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="relative overflow-hidden rounded-lg mb-4 aspect-video">
            <img 
              src={feature.image} 
              alt={feature.title}
              class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent"></div>
          </div>
          <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600 transition-colors">{feature.title}</h3>
          <p class="text-white-600">{feature.description}</p>
        </div>
      ))}
    </div>

    <div class="flex justify-center gap-4 mb-20">
      <a 
        href="/blog" 
        class="px-6 py-2 border-2 border-primary-600 text-primary-600 rounded-lg hover:bg-primary-600 hover:text-white transition-all duration-300"
      >
        Blog
      </a>
