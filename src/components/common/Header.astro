---
import Logo from './Logo.astro';
import Navigation from './Navigation.astro';
import MobileMenu from './MobileMenu.astro';
---

<header class="fixed top-4 left-1/2 -translate-x-1/2 w-[95%] max-w-7xl bg-white/10 backdrop-blur-sm shadow-lg rounded-2xl z-50 border border-white/20">
  <div class="px-4 sm:px-6">
    <div class="flex items-center justify-between h-16">
      <Logo variant="dark" />
      <Navigation />
      <div class="hidden md:flex items-center">
        <a 
          href="/demo" 
          class="px-6 py-2.5 bg-gradient-to-r from-[#0d9488] to-[#3b82f6] text-white rounded-xl font-medium hover:from-[#0b847a] hover:to-[#2563eb] hover:shadow-lg hover:-translate-y-0.5 transform transition-all duration-200"
        >
          Get Demo
        </a>
      </div>
    </div>
  </div>
</header>

<MobileMenu />