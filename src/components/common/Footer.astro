---
const currentYear = new Date().getFullYear();

const resources = [
  { href: '/blog', text: 'Blog Posts' },
  { href: '/case-studies', text: 'Case Studies' },
  { href: '/faqs', text: 'FAQs' },
  { href: '/contact', text: 'Contact Us' },
  { href: '/support', text: 'Support Center' }
];

const connect = [
  { href: '/newsletter', text: 'Newsletter' },
  { href: '/events', text: 'Events' },
  { href: '/webinars', text: 'Webinars' },
  { href: '/community', text: 'Community' },
  { href: '/feedback', text: 'Feedback' }
];

const socialLinks = [
  { href: '#', text: 'Facebook' },
  { href: '#', text: 'Instagram' },
  { href: '#', text: 'X' },
  { href: '#', text: 'LinkedIn' },
  { href: '#', text: 'YouTube' }
];

import Logo from './Logo.astro';
---

<footer class="py-20 relative z-50">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Subscription Section -->
      <div class="relative z-50">
        <div class="mb-6">
          <Logo variant="light" />
        </div>
        <p class="text-white-600 mb-6">Subscribe to our newsletter for the latest features and updates.</p>
        <form class="space-y-4">
          <input 
            type="email" 
            placeholder="Your email here" 
            class="w-full px-4 py-2.5 rounded-lg bg-white/10 border border-white/20 text-white placeholder-white-600 focus:outline-none focus:ring-2 focus:ring-primary-600 focus:border-transparent"
          />
          <button 
            type="submit"
            class="w-full px-4 py-2.5 bg-gradient-to-r from-[#0d9488] to-[#3b82f6] text-white rounded-lg hover:from-[#0b847a] hover:to-[#2563eb] transition-all duration-200"
          >
            Join
          </button>
        </form>
        <p class="text-white-600 text-sm mt-2">
          By subscribing, you consent to receive updates and agree to our <a href="/privacy-policy" class="text-primary-600 hover:text-primary-500">Privacy Policy</a>.
        </p>
      </div>

      <!-- Resources Section -->
      <div class="relative z-50">
        <h3 class="text-lg font-semibold text-white mb-4">Resources</h3>
        <ul class="space-y-2">
          {resources.map(resource => (
            <li>
              <a href={resource.href} class="text-white-600 hover:text-white transition-colors">
                {resource.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Connect With Us Section -->
      <div class="relative z-50">
        <h3 class="text-lg font-semibold text-white mb-4">Connect With Us</h3>
        <ul class="space-y-2">
          {connect.map(item => (
            <li>
              <a href={item.href} class="text-white-600 hover:text-white transition-colors">
                {item.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Follow Us Section -->
      <div class="relative z-50">
        <h3 class="text-lg font-semibold text-white mb-4">Follow Us</h3>
        <ul class="space-y-2">
          {socialLinks.map(social => (
            <li>
              <a href={social.href} class="text-white-600 hover:text-white transition-colors">
                {social.text}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="mt-12 pt-8 border-t border-white/10 text-center relative z-50">
      <p class="text-white-600">Â© {currentYear} Entagl. All rights reserved.</p>
      <ul class="flex justify-center space-x-4 mt-4">
        <li>
          <a href="/privacy-policy" class="text-white-600 hover:text-white transition-colors">Privacy Policy</a>
        </li>
        <li>
          <a href="/terms-of-use" class="text-white-600 hover:text-white transition-colors">Terms of Use</a>
        </li>
        <li>
          <a href="/cookie-settings" class="text-white-600 hover:text-white transition-colors">Cookie Settings</a>
        </li>
      </ul>
    </div>
  </div>
</footer>

<style>
  .text-white-600 {
    color: rgba(255, 255, 255, 0.6);
  }

  .text-primary-600 {
    color: var(--primary, #0d9488);
  }

  .hover\:text-primary-500:hover {
    color: #0b847a;
  }

  /* Ensure all interactive elements are clickable */
  a, button, input {
    position: relative;
    z-index: 51;
  }
</style>