---
interface Channel {
  name: string;
  icon: string;
}

interface Props {
  channels: Channel[];
}

const { channels } = Astro.props;
---

<section class="py-20 bg-white/5">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-white mb-12">Available Channels</h2>
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-6">
      {channels.map(channel => (
        <div class="flex flex-col items-center p-6 bg-white/10 rounded-xl hover:bg-white/20 transition-all duration-300">
          <svg class="w-8 h-8 text-white mb-3" viewBox="0 0 24 24" fill="currentColor">
            <path d={channel.icon}/>
          </svg>
          <span class="text-white font-medium">{channel.name}</span>
        </div>
      ))}
    </div>
  </div>
</section>