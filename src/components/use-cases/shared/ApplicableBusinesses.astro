---
interface Props {
  businesses: string[];
}

const { businesses } = Astro.props;
---

<section class="py-20 bg-white/5">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-white mb-12">Applicable Businesses</h2>
    <div class="flex flex-wrap justify-center gap-4">
      {businesses.map(business => (
        <div class="px-6 py-3 bg-white/10 rounded-full text-white hover:bg-white/20 transition-all duration-300">
          {business}
        </div>
      ))}
    </div>
  </div>
</section>