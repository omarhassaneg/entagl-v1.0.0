---
interface Benefit {
  title: string;
  description: string;
  icon: string;
}

interface Props {
  benefits: Benefit[];
}

const { benefits } = Astro.props;
---

<section class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center text-white mb-12">Business Benefits</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {benefits.map(benefit => (
        <div class="p-6 bg-white/5 rounded-xl hover:bg-white/10 transition-all duration-300">
          <div class="w-12 h-12 bg-gradient-to-r from-[#0d9488] to-[#3b82f6] rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={benefit.icon} />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-white mb-3">{benefit.title}</h3>
          <p class="text-white-600">{benefit.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>