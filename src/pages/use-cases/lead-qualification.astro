---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/use-cases/shared/Hero.astro';
import Features from '../../components/use-cases/shared/Features.astro';
import Channels from '../../components/use-cases/shared/Channels.astro';
import Benefits from '../../components/use-cases/shared/Benefits.astro';
import Comparison from '../../components/use-cases/shared/Comparison.astro';
import ApplicableBusinesses from '../../components/use-cases/shared/ApplicableBusinesses.astro';
import CTA from '../../components/use-cases/shared/CTA.astro';
import { icons } from '../../utils/icons';

const features = {
  title: "How AI-Powered Lead Qualification Works",
  subtitle: "Features",
  description: "Our AI solution transforms your lead qualification process with intelligent automation and natural conversations.",
  features: [
    {
      title: "AI Tailored to Your Business",
      description: "AI learns your tone, personality, and product knowledge to deliver natural and accurate customer interactions.",
      icon: icons.tailored
    },
    {
      title: "Smart Conversations",
      description: "Engages prospects naturally, asks insightful questions, and offers tailored recommendations based on responses.",
      icon: icons.conversation
    },
    {
      title: "Intelligent Filtering",
      description: "Automatically identifies and prioritizes high-value leads while politely redirecting unqualified ones.",
      icon: icons.filter
    },
    {
      title: "Unlimited Scalability",
      description: "Handles unlimited inquiries 24/7 across multiple languages without delays.",
      icon: icons.scale
    },
    {
      title: "Seamless Integration",
      description: "Connects with your CRM, scheduling systems, and notification tools for streamlined operations.",
      icon: icons.integration
    },
    {
      title: "Continuous Learning",
      description: "Improves responses and customer experience through ongoing learning from interactions.",
      icon: icons.improvement
    }
  ]
};

const channels = [
  { name: "Google Ads", icon: icons.googleAds },
  { name: "Instagram", icon: icons.instagram },
  { name: "Facebook", icon: icons.facebook },
  { name: "WhatsApp", icon: icons.whatsapp },
  { name: "Telegram", icon: icons.telegram },
  { name: "LinkedIn", icon: icons.linkedin },
  { name: "Email", icon: icons.email },
  { name: "Website Chat", icon: icons.chat }
];

const benefits = [
  {
    title: "Increased Revenue",
    description: "Focus your team on high-potential leads, improving conversion rates and reducing the sales cycle.",
    icon: icons.improvement
  },
  {
    title: "Cost Savings",
    description: "Reduce the need for manual lead screening by automating the qualification process.",
    icon: icons.scale
  },
  {
    title: "Improved Quality",
    description: "Ensure your pipeline is filled with well-qualified leads tailored to your business criteria.",
    icon: icons.filter
  }
];

const comparison = {
  title: "Why Choose AI Over Traditional Landing Pages?",
  description: "Discover how AI-powered lead qualification outperforms traditional methods.",
  points: [
    {
      title: "Personalized Engagement",
      description: "Dynamic, tailored responses instead of static content, creating meaningful conversations with each lead.",
      icon: icons.tailored
    },
    {
      title: "Conversational Persuasion",
      description: "Builds trust through natural dialogue and understanding, adapting to each prospect's needs.",
      icon: icons.conversation
    },
    {
      title: "Higher Conversion Rates",
      description: "Actively guides prospects through the qualification process, increasing conversion rates significantly.",
      icon: icons.improvement
    }
  ]
};

const businesses = [
  "Car dealerships",
  "Law firms",
  "Fitness centers",
  "B2B companies",
  "Real estate agencies",
  "Recruitment agencies",
  "Financial services"
];
---

<Layout 
  title="Lead Qualification | AI-Powered Solutions"
  description="Transform your lead qualification process with AI-powered conversational agents."
>
  <Hero
    title="Transform Lead Qualification with"
    description="Put conversational AI at the forefront of your lead interactions. Our intelligent agents qualify leads, update your CRM in real-time, and organize your pipeline for maximum efficiency."
  />
  <Features {...features} />
  <Channels channels={channels} />
  <Benefits benefits={benefits} />
  <Comparison {...comparison} />
  <ApplicableBusinesses businesses={businesses} />
  <CTA 
    title="Ready to Transform Your Lead Qualification?"
    description="Experience the power of AI-driven lead qualification and take your business to the next level."
  />
</Layout>