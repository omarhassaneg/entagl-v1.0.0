---
import Layout from '../../layouts/Layout.astro';
import { icons } from '../../utils/icons';

const useCases = [
  {
    title: 'Lead Generation',
    description: 'Transform how you gather leads with conversational AI that engages potential customers directly on social media.',
    href: '/use-cases/lead-generation',
    icon: icons.filter,
    color: 'from-[#0d9488] to-[#3b82f6]',
    features: ['Instant engagement', 'Smart data collection', 'Multi-channel presence'],
    benefit: {
      title: 'Higher Conversion Rates',
      description: 'Replace static landing pages with dynamic conversations for up to 3x better conversion rates'
    }
  },
  {
    title: 'Lead Qualification',
    description: 'Qualify leads automatically through intelligent conversations that understand needs and match your criteria.',
    href: '/use-cases/lead-qualification',
    icon: icons.conversation,
    color: 'from-[#0d72a4] to-[#8a60f6]',
    features: ['Real-time qualification', 'Smart routing', 'Automated follow-up'],
    benefit: {
      title: 'Focus on High-Value Leads',
      description: 'Save 80% of time by automatically filtering and prioritizing your most promising leads'
    }
  },
  {
    title: 'Social Media Sales',
    description: 'Convert social media engagement into sales with AI that handles inquiries and guides purchases.',
    href: '/use-cases/social-media-sales',
    icon: icons.improvement,
    color: 'from-[#0d58c4] to-[#aa40f6]',
    features: ['Automated responses', 'Product recommendations', 'Direct checkout'],
    benefit: {
      title: 'Boost Average Order Value',
      description: 'Increase sales by 40% with intelligent product recommendations and upselling'
    }
  },
  {
    title: 'Smart Booking',
    description: 'Streamline appointment scheduling with AI that qualifies clients and handles bookings automatically.',
    href: '/use-cases/smart-booking',
    icon: icons.scale,
    color: 'from-[#0d4bd4] to-[#ba30f6]',
    features: ['Automated scheduling', 'Calendar integration', 'Reminder system'],
    benefit: {
      title: 'Reduce No-Shows',
      description: 'Cut appointment no-shows by 80% with automated reminders and deposit collection'
    }
  },
  {
    title: 'Customer Support',
    description: 'Provide 24/7 customer service with AI that handles inquiries and escalates when needed.',
    href: '/use-cases/customer-support',
    icon: icons.tailored,
    color: 'from-[#0d3ee4] to-[#ca20f6]',
    features: ['24/7 availability', 'Smart escalation', 'Multi-language support'],
    benefit: {
      title: 'Lower Support Costs',
      description: 'Reduce support costs by 60% while maintaining 24/7 availability'
    }
  }
];

// Rest of the imports and industry data remain the same...
---

<Layout 
  title="Use Cases | AI-Powered Solutions"
  description="Explore our range of AI solutions for lead generation, qualification, sales, booking, and customer support."
>
  <div class="pt-32 pb-20">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          AI Solutions for Every Need
        </h1>
        <p class="text-xl text-white-600 max-w-3xl mx-auto">
          Discover how our AI solutions can transform your business operations, from lead generation to customer support.
        </p>
      </div>

      <!-- Use Cases Grid -->
      <div class="grid lg:grid-cols-2 gap-8 mb-20">
        {useCases.map((useCase, index) => (
          <a 
            href={useCase.href}
            class="group bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:bg-white/10 transition-all duration-300"
            data-aos="fade-up"
            data-aos-delay={index * 100}
          >
            <div class="flex items-start gap-6">
              <div class={`p-4 rounded-xl bg-gradient-to-r ${useCase.color}`}>
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={useCase.icon} />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-white mb-3 group-hover:text-primary-600 transition-colors">
                  {useCase.title}
                </h2>
                <p class="text-white-600 mb-6">
                  {useCase.description}
                </p>

                <!-- Business Benefit Highlight -->
                <div class="bg-white/5 rounded-lg p-4 mb-6 border border-white/10">
                  <div class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-primary-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                    </svg>
                    <div>
                      <h3 class="text-white font-semibold mb-1">{useCase.benefit.title}</h3>
                      <p class="text-white-600 text-sm">{useCase.benefit.description}</p>
                    </div>
                  </div>
                </div>

                <div class="grid grid-cols-2 gap-3 mb-6">
                  {useCase.features.map(feature => (
                    <div class="flex items-center text-white-600">
                      <svg class="w-5 h-5 text-primary-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {feature}
                    </div>
                  ))}
                </div>

                <div class="flex items-center text-primary-600 font-medium group-hover:translate-x-2 transition-transform duration-200">
                  Learn more
                  <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <!-- Rest of the component (Industries and CTA sections) remains the same -->
    </div>
  </div>
</Layout>

<style>
  .text-white-600 {
    color: rgba(255, 255, 255, 0.6);
  }
</style>